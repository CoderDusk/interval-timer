page {
  background-color: #f3f4f6;
  max-width: 420px;
}
.timer-setting {
  background-color: white;
  margin: 15px;
}
.timer-setting .title {
  font-size: 24px;
  font-weight: bold;
  padding: 15px;
}
.timer-setting .number-box {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.group-name {
  padding-top: 20px;
  padding-bottom: 10px;
}
.start-button {
  margin-top: 30px;
  border-radius: 0;
}
.start-button .start-icon {
  padding-right: 10px;
}
.bottom-padding {
  height: 30px;
}
.timer-show {
  background-color: #f2f3f5;
  height: 30px;
  line-height: 30px;
  font-size: 15px;
  text-align: center;
  padding: 0 15px;
}

