page {
  background-color: #19BE6B;
  padding: 10px;
  height: 100%;
}
.main {
  height: 100%;
}
.timer {
  height: 75%;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: vertical;
  -webkit-box-direction: normal;
  -webkit-flex-direction: column;
          flex-direction: column;
  -webkit-box-pack: center;
  -webkit-justify-content: center;
          justify-content: center;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.timer .count-left {
  font-size: 60px;
}
.timer .timer-name {
  font-size: 50px;
}
.button {
  position: absolute;
  right: 30px;
  bottom: 30px;
}
.pausedTimer {
  font-size: 200rpx;
  color: white;
}
[class^="u-countdown-colon"] {
  padding-left: 0;
}

